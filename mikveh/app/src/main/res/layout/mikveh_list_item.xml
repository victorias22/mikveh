<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:textDirection="ltr">


    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="230dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/googlemaps"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            app:srcCompat="@drawable/google_maps" />


        <TextView
            android:id="@+id/address_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="15dp"
            android:layout_marginTop="140dp"
            android:text="TextView"
            android:textDirection="rtl"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/city_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="170dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="right"
            android:text="TextView"
            android:textDirection="rtl"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address_txtView" />

        <TextView
            android:id="@+id/neighbor_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="4dp"
            android:layout_gravity="right"
            android:textDirection="rtl"
            android:text="TextView"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/total_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:layout_marginStart="15dp"
            android:layout_marginTop="140dp"
            android:text="Total Rate"
            android:textDirection="rtl"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/ratingBar2"
            app:layout_constraintTop_toTopOf="@+id/ratingBar2" />

        <TextView
            android:id="@+id/total_rate_number"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:layout_marginStart="15dp"
            android:layout_marginTop="170dp"
            android:text=""
            android:textDirection="rtl"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/total_rate"
            app:layout_constraintTop_toTopOf="@+id/total_rate" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="bottom"
            android:scaleX=".5"
            android:scaleY=".5"
            android:transformPivotX="25dp"
            android:transformPivotY="35dp"
            android:theme="@style/RatingBar"
            android:rating="0" />


    </androidx.cardview.widget.CardView>
</LinearLayout>